        <div id="menuButton" onclick="Activate()">
            <input id="checkBox" type="checkbox">
            <label id="labelCheckBox" for="checkBox">
                    <div id="line1"></div>
                    <div id="line2"></div>
                    <div id="line3"></div>
            </label>
